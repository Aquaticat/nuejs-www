
:root
  $page-width 45em


// normalize
*, *::before, *::after
  box-sizing border-box

*
  margin 0

a
  text-decoration none

a[href]
  pointer

html
  overflow-x hidden
  scroll-behavior smooth

img, figure
  max-width 100%

main
  min-height 35vh

body
  mb 5em
  > *
    max-width 1100px
    margin 0 auto
    width 90%


