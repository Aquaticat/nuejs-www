
h1
  letter-spacing .1em

main
  max-width $page-width

  h2
    font 1.6em
    mt 3.5em


  blockquote
    border-left 3px solid $main
    m -.7em 0 2em

    p
      font 1.3em 1.5 400 italic $gray-600
      text-indent -.4em
      max-width 31em

.tall
  m 3em 0
  block

@large
  .wide
    m 3em -5em
    block

    img
      max-width calc(100% + 10em)
      radius 4px
