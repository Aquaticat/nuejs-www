
// checkbox/radio label
.label
  align-items center
  font-weight 500
  inline-flex
  gap .45em
  pointer
  mr 1em

.has-error
  border-color red
  &:focus
    outline-color red

.error-msg
  font 95% red
  mt .4em

[type=checkbox], [type=radio]
  outline-offset 1.5px
  appearance none
  bg-pos center
  size 1.2rem
  pointer
  p 0

  &:focus
    outline 2px solid $main-400

[type=checkbox]:checked
  bg $main
  bg-size 1.1rem
