body
  bg /home/img/grid.svg no-repeat
  bg-pos 30% 100px
  bg-size 85%

article h1
  max-width 8em
  font-size calc(2em + 1.6vw)

  em
    font 900 underline capitalize #000
    text-decoration-color $pink
    text-underline-offset 10px
    inline

.signature
  m 0 0 0 -1.7em
  width 11em
