

body
  bg /home/img/grid.svg no-repeat
  bg-size 80%
  bg-pos -8em 3em


.tools
  mb 7em

  code
    font 70% 800 1px
    text-shadow 0 0 2px white
    border-color $main-100
    font-family inherit
    bg $main-200
    p .1em .8em
    inline-block

  ul
    list-style none
    grid-template-columns repeat( auto-fit, minmax(300px, 1fr))
    display grid
    gap 1.5rem
    p 0

  li
    box-shadow 0 1px 2em #0001
    p 1.5em 1.7em 2em
    radius 12px
    border
    m 0

  h3
    letter-spacing -0.03em
    font 800
    + p
      font 500
      max-width 16em

  p + p
    border-top 2px dashed
    font 85% $gray
    max-width 80%
    pt .7em

  em
    font 600 normal #000


.quotes
  column-width 17em
  column-gap 1.5em
  list-style none
  p 0

.quote
  bg /nueui/img/ycombinator.svg no-repeat
  box-shadow 0 0 8em #0001
  break-inside avoid-column
  bg-pos right 1em top 1em
  bg-size 1.4em
  max-width 25em
  radius 8px
  mb 1.5em
  p 1.5em
  border
  a
    font 85% $gray
    mb .3em
    block


.from-twitter
  bg /nueui/img/twitter.svg

.from-gh
  bg /nueui/img/github.svg

.from-reddit
  bg /nueui/img/reddit.svg

.from-lobster
  bg /home/img/lobsters.png

